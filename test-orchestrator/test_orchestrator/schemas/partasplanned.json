{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PartAsPlanned",
  "description": "JSON Schema for Part As Planned in Catena-X Traceability (placeholder)",
  "type": "object",
  "x-schema-version": "0.1.0",
  "properties": {
    "catenaXId": {
      "type": "string",
      "description": "The unique Catena-X ID for the part as planned"
    },
    "manufacturerPartId": {
      "type": "string",
      "description": "The manufacturer's internal part number"
    },
    "customerPartId": {
      "type": "string",
      "description": "The customer's internal part number (optional)"
    },
    "nameAtManufacturer": {
      "type": "string",
      "description": "The name of the part used by the manufacturer"
    },
    "classification": {
      "type": "string",
      "description": "The classification of the part"
    },
    "validityPeriod": {
      "type": "object",
      "properties": {
        "validFrom": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time from which this part definition is valid"
        },
        "validTo": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time until which this part definition is valid (optional)"
        }
      },
      "required": ["validFrom"]
    }
  },
  "required": ["catenaXId", "manufacturerPartId", "nameAtManufacturer", "classification"],
  "additionalProperties": false
}